<?xml version="1.0" encoding="utf-8"?>
<androidx.percentlayout.widget.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                               xmlns:app="http://schemas.android.com/apk/res-auto"
                                               android:background="#b90b0e"
                                               android:layout_width="match_parent"
                                               android:layout_height="match_parent">

        <ImageView
            app:layout_widthPercent="100%"
            app:layout_aspectRatio="178%"
            android:background="#dbc4bcc4"
            android:id="@+id/main_image"/>

        <ImageView
            app:layout_widthPercent="33%"
            app:layout_aspectRatio="178%"
            android:layout_below="@id/main_image"
            android:background="#e4d20c"
            android:layout_centerHorizontal="true"
            android:id="@+id/image_2"/>

        <ImageView
            android:layout_below="@id/main_image"
            android:background="#71d4cd"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@id/image_2"
            android:layout_alignTop="@id/image_2"
            android:layout_alignBottom="@id/image_2"
            android:id="@+id/image_1"/>



        <ImageView
            android:layout_width="wrap_content"
            android:layout_alignTop="@id/image_2"
            android:layout_alignBottom="@id/image_2"
            android:layout_alignParentRight="true"
            android:layout_below="@id/main_image"
            android:background="#3edf0d"
            android:layout_toRightOf="@id/image_2"
            android:id="@+id/view_more"/>


</androidx.percentlayout.widget.PercentRelativeLayout>