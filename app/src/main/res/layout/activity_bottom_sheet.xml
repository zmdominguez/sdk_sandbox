<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="handlers"
            type="com.zdominguez.sdksandbox.BottomSheetDemoActivity" />
    </data>
    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/bottom_sheet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#b71c1c"
            app:behavior_hideable="false"
            app:behavior_peekHeight="72dp"
            app:layout_behavior="android.support.design.widget.BottomSheetBehavior">
            <ImageButton
                android:id="@+id/button_totals_expansion"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="12dp"
                android:onClick="@{ (view) -> handlers.onTotalsClicked(view) }"
                android:background="@drawable/ic_chevron_up"
                app:layout_constraintBottom_toTopOf="@id/breakdown_guideline"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/label_total"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/label_total"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:onClick="@{ (view) -> handlers.onTotalsClicked(buttonTotalsExpansion) }"
                android:paddingLeft="12dp"
                android:paddingTop="12dp"
                android:text="Header text"
                app:layout_constraintBottom_toTopOf="@id/total"
                app:layout_constraintLeft_toRightOf="@id/button_totals_expansion"
                app:layout_constraintRight_toLeftOf="@id/continue_guideline"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/total"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:onClick="@{ (view) -> handlers.onTotalsClicked(buttonTotalsExpansion) }"
                android:paddingBottom="12dp"
                android:paddingLeft="12dp"
                android:text="Content text"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="@id/breakdown_guideline"
                app:layout_constraintLeft_toLeftOf="@id/label_total"
                app:layout_constraintRight_toRightOf="@id/label_total"
                app:layout_constraintTop_toBottomOf="@id/label_total"/>

            <android.support.constraint.Guideline
                android:id="@+id/continue_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent=".50"/>

            <Button
                android:id="@+id/button_continue"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginRight="12dp"
                android:layout_marginLeft="12dp"
                android:layout_marginBottom="12dp"
                android:layout_marginTop="12dp"
                android:text="CONTINUE"
                app:layout_constraintBottom_toBottomOf="@id/breakdown_guideline"
                app:layout_constraintLeft_toRightOf="@id/continue_guideline"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <android.support.constraint.Guideline
                android:id="@+id/breakdown_guideline"
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_height="0dp"
                android:layout_marginTop="72dp"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/placeholder"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/lorem_long"
                android:padding="12dp"
                app:layout_constraintTop_toBottomOf="@id/breakdown_guideline"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:visible="@{ handlers.showPlaceholder }"
                tools:visibility="visible"/>
        </android.support.constraint.ConstraintLayout>

    </android.support.design.widget.CoordinatorLayout>
</layout>